{
    "compilerOptions": {
      "target": "ES6",                              
      "module": "commonjs",                         
      "rootDir": "./src",                           
      "outDir": "./dist",                           
      "strict": false,                               
      "esModuleInterop": true,                      
      "skipLibCheck": true,                         
      "forceConsistentCasingInFileNames": true,     
      "experimentalDecorators": true,               
      "emitDecoratorMetadata": true,                
      "resolveJsonModule": true                     
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  